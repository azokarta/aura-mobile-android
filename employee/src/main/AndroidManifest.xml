<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kz.aura.merp.employee">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
<!--    <uses-permission android:name="android.permission.CAMERA" />-->

<!--    <uses-feature-->
<!--        android:name="android.hardware.camera"-->
<!--        android:required="true" />-->

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <service android:name="kz.aura.merp.employee.util.BackgroundService" />

        <service
            android:name="kz.aura.merp.employee.util.FirebaseService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>


        <activity android:name="kz.aura.merp.employee.ui.activity.PassCodeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="kz.aura.merp.employee.ui.activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="kz.aura.merp.employee.ui.activity.ServiceApplicationActivity"
            android:parentActivityName="kz.aura.merp.employee.ui.activity.MasterActivity"
            android:label="@string/service"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kz.aura.merp.employee.ui.activity.MasterActivity" />
        </activity>
        <activity android:name="kz.aura.merp.employee.ui.activity.MasterActivity" android:label="@string/master" android:screenOrientation="portrait"/>
        <activity android:name="kz.aura.merp.employee.ui.activity.FinanceAgentActivity" android:label="@string/finAgent" android:screenOrientation="portrait" />
        <activity android:name="kz.aura.merp.employee.ui.activity.DealerActivity" android:label="@string/dealer" android:screenOrientation="portrait" />
        <activity
            android:name="kz.aura.merp.employee.ui.activity.DemoActivity"
            android:parentActivityName="kz.aura.merp.employee.ui.activity.DealerActivity"
            android:label="@string/demo" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kz.aura.merp.employee.ui.activity.DealerActivity" />
        </activity>
        <activity
            android:name="kz.aura.merp.employee.ui.activity.PlanActivity"
            android:parentActivityName="kz.aura.merp.employee.ui.activity.FinanceAgentActivity" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kz.aura.merp.employee.ui.activity.FinanceAgentActivity" />
        </activity>
        <activity android:name="kz.aura.merp.employee.ui.activity.ChiefActivity" android:screenOrientation="portrait" />
        <activity
            android:name="kz.aura.merp.employee.ui.activity.AuthorizationActivity"
            android:configChanges="locale" android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible"  />
        <activity android:name="kz.aura.merp.employee.ui.activity.MapActivity" android:label="@string/map" android:screenOrientation="portrait" />
        <activity
            android:name="kz.aura.merp.employee.ui.activity.SettingsActivity" android:screenOrientation="portrait"
            android:configChanges="locale" android:label="@string/settings"/>
    </application>

</manifest>