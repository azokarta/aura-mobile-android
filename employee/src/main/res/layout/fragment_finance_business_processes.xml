<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="client"
            type="kz.aura.merp.employee.data.model.Client" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="kz.aura.merp.employee.fragment.FinanceBusinessProcessFragment">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fin_business_processes_cause_text_field"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:hint="@string/cause"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stepsRecyclerView">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fin_business_processes_cause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="100"
                android:text="@{client.description}"
                android:textColor="@color/colorBlack" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/businessProcessesSaveBtn"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:text="@string/save"
            android:textColor="@color/colorPrimary"
            app:backgroundTint="@color/colorLightGray"
            app:cornerRadius="5dp"
            app:icon="@drawable/ic_baseline_save_24"
            app:iconGravity="textStart"
            app:iconTint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="@+id/resultBtn"
            app:layout_constraintTop_toBottomOf="@+id/resultBtn" />

        <Button
            android:id="@+id/resultBtn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:text="@string/result"
            app:layout_constraintEnd_toEndOf="@+id/fin_business_processes_cause_text_field"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/fin_business_processes_cause_text_field"
            app:layout_constraintTop_toBottomOf="@+id/fin_result_label" />

        <TextView
            android:id="@+id/fin_result_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/result"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="@+id/fin_business_processes_cause_text_field"
            app:layout_constraintTop_toBottomOf="@+id/fin_business_processes_cause_text_field" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stepsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>