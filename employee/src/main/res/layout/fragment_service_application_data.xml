<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="serviceApplication"
            type="kz.aura.merp.employee.data.model.ServiceApplication" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="kz.aura.merp.employee.fragment.ServiceApplicationDataFragment">

        <TextView
            android:id="@+id/service_application_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Id:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/service_application_id"
            app:layout_constraintBottom_toBottomOf="@+id/service_application_id_label"
            app:layout_constraintStart_toEndOf="@+id/service_application_id_label"
            app:layout_constraintTop_toTopOf="@+id/service_application_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="@{Long.toString(serviceApplication.id)}"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/service_application_id_label"
            app:layout_constraintTop_toBottomOf="@+id/service_application_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{@string/fullName+`:`}"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/applicant_name"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="@{serviceApplication.applicantName}"
            android:textColor="#000000" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/service_application_taxi_expences_label"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_width="0dp"
            app:startIconDrawable="@drawable/ic_baseline_local_taxi_24"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:hint="@string/taxiExpense">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/demo_data_taxi_expences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete"
                android:textColor="#000000"
                android:maxLength="100"
                android:text="@{Double.toString(serviceApplication.taxiExpenseAmount)}"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/service_application_taxi_expences_label"
            app:layout_constraintTop_toBottomOf="@+id/service_application_taxi_expences_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{@string/phones+`:`}"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/service_application_phones"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/service_application_phones"
            app:layout_constraintTop_toBottomOf="@+id/service_application_phones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{@string/serviceAddress+`:`}"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/service_address"
            app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="@{serviceApplication.address}"
            android:textColor="#000000" />

        <Button
            android:id="@+id/serviceApplicationDataSaveBtn"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:text="@string/save"
            android:textColor="@color/colorPrimary"
            app:backgroundTint="@color/colorLightGray"
            app:cornerRadius="5dp"
            app:icon="@drawable/ic_baseline_save_24"
            app:iconGravity="textStart"
            app:iconTint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>