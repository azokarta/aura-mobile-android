<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/nav_splash">

    <fragment
        android:id="@+id/nav_splash"
        android:name="kz.aura.merp.employee.ui.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_authFragment"
            app:destination="@id/nav_auth"
            app:popUpTo="@id/nav_splash"
            app:popUpToInclusive="true"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_splashFragment_to_passcodeFragment"
            app:destination="@id/nav_passcode"
            app:popUpTo="@id/nav_splash"
            app:popUpToInclusive="true"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/nav_auth"
        android:name="kz.aura.merp.employee.ui.fragment.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_passcodeFragment"
            app:destination="@id/nav_passcode" />
    </fragment>
    <fragment
        android:id="@+id/nav_passcode"
        android:name="kz.aura.merp.employee.ui.fragment.PasscodeFragment"
        android:label="fragment_passcode"
        tools:layout="@layout/fragment_passcode" >
        <action
            android:id="@+id/action_passcodeFragment_to_hilt_FinanceActivity"
            app:destination="@id/nav_finance" />
    </fragment>
    <activity
        android:id="@+id/nav_finance"
        android:name="kz.aura.merp.employee.ui.activity.Hilt_FinanceActivity"
        android:label="Hilt_FinanceActivity" />
</navigation>