<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kz.aura.merp.customer.fragment.MessagingTestFragment">


    <EditText
        android:id="@+id/messaging_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="224dp"
        android:ems="10"
        android:hint="Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/messaging_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Message"
        app:layout_constraintEnd_toEndOf="@+id/messaging_title"
        app:layout_constraintStart_toStartOf="@+id/messaging_title"
        app:layout_constraintTop_toBottomOf="@+id/messaging_title" />

    <Button
        android:id="@+id/messaging_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/messaging_message"
        app:layout_constraintStart_toStartOf="@+id/messaging_message"
        app:layout_constraintTop_toBottomOf="@+id/messaging_message" />
</androidx.constraintlayout.widget.ConstraintLayout>